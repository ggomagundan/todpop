
<table class="table table-hover">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Ad_type</th>
    <th>Contract</th>
    <th>Remain</th>
    <th>Unit Price</th>
    <th>Pay Type</th>
    <th>Date</th>
    <th>Priority</th>
    <th>TargetUrl</th>
    <th>ConfirmUrl</th>
    <th>Reward</th>
    <th>n_question</th>
    <th>Client ID</th>
    <th> </th>
  </tr>
  <% for cpx_advertisement in @cpx_advertisements %>
    <tr>
      <td><%= cpx_advertisement.id %></td>
      <td><%= cpx_advertisement.ad_name %></td>
      <td><%= "#{cpx_advertisement.ad_type} (#{cpx_advertisement.kind})" %></td>
      <td><%= cpx_advertisement.contract %></td>
      <td><%= cpx_advertisement.remain %></td>
      <td><%= cpx_advertisement.unit_price %></td>
      <td><%= cpx_advertisement.pay_type %> (<%=cpx_advertisement.pay_kind %>)</td>
      <td><%= cpx_advertisement.start_date.to_date %> ~ <%= cpx_advertisement.end_date.to_date %></td>
      <td><%= cpx_advertisement.priority %></td>
      <td><%= cpx_advertisement.target_url %></td>
      <td><%= cpx_advertisement.confirm_url %></td>
      <td><%= cpx_advertisement.reward %></td>
      <td><%= cpx_advertisement.n_question %></td>
      <td><%= link_to "Edit", edit_admin_cpx_advertisement_path(cpx_advertisement), :class => "btn btn-warning" %></td>
      <%#= link_to "Destroy", [:admin, cpx_advertisement], :confirm => 'Are you sure?', :method => :delete %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Admin/Cpx Advertisement", new_admin_cpx_advertisement_path %></p>
