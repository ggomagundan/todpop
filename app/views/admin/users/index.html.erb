
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Name</th>
    <th>Name</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td> <%= user.nickname %></td>
      <td> <%= user.email %></td>
      <td><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-warning' %></td>
      <td><%= link_to "Destroy", [:admin, user], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>

