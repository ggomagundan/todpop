
<table class="table table-hover">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Ad_type</th>
    <th>Contract</th>
    <th>Remain</th>
    <th>Unit Price</th>
    <th>Pay Type</th>
    <th>Date</th>
    <th>Priority</th>
    <th>TargetUrl</th>
    <th>ConfirmUrl</th>
    <th>Reward</th>
    <th>Point</th>
    <th>n_question</th>
    <th>Cor Name</th>
    <th> </th>
  </tr>
  <% for lock_advertisement in @lock_advertisements %>
    <tr>
      <td><%= lock_advertisement.id %></td>
      <td><%= lock_advertisement.ad_name %></td>
      <td><%= "#{lock_advertisement.ad_type} (#{lock_advertisement.kind})" %></td>
      <td><%= lock_advertisement.contract %></td>
      <td><%= lock_advertisement.remain %></td>
      <td><%= lock_advertisement.basic_show_price %></td>
      <td><%= lock_advertisement.pay_type %> (<%=lock_advertisement.pay_kind %>)</td>
      <td><%= lock_advertisement.start_date.to_date %> ~ <%= lock_advertisement.end_date.to_date %></td>
      <td><%= lock_advertisement.priority %></td>
      <td><%= lock_advertisement.target_url %></td>
      <td><%= lock_advertisement.confirm_url %></td>
      <td><%= if lock_advertisement.reward !=nil
                lock_advertisement.reward
              else
                0
              end%></td>
      <td><%= if lock_advertisement.point != nil
                lock_advertisement.point
              else
                0
              end%></td>
      <td><%= lock_advertisement.n_question %></td>
      <td><%= @lock_cor_name.find_by_id(lock_advertisement.cli_id).cor_name %></td>
      <td><%= link_to "Edit", edit_admin_screen_lock_path(lock_advertisement), :class => "btn btn-warning" %></td>
      <%#= link_to "Destroy", [:admin, cpx_advertisement], :confirm => 'Are you sure?', :method => :delete %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Admin/Lock Advertisement", new_admin_screen_lock_path %></p>
