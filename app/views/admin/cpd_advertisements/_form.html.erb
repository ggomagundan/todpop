<%= form_for [:admin, @cpd_advertisement] do |f| %>
  <% if @cpd_advertisement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cpd_advertisement.errors.count, "error") %> prohibited this cpd_advertisement from being saved:</h2>
      <ul>
      <% @cpd_advertisement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">kind</label>
    <div class="controls">
      <label>
        <%= f.radio_button :kind, 1, :checked=>  :kind ==1  %> 이미지
      </label>
      <label>
        <%= f.radio_button :kind, 2, :checked => :kind ==2  %> 쿠폰
      </label>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">count</label>
    <div class="controls">
      <label><%= f.text_field :count %></label>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Time</label>
    <div class="controls">
      <label>
        <%= f.text_field :start_time, :class => "calendar" %> ~
        <%= f.text_field :end_time, :class=> "calendar" %>
      </label>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">front_image</label>
    <div class="controls">
      <label><%= f.file_field :front_image %></label>
    <%= image_tag f.object.front_image_url if f.object.front_image.present? %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">back_image</label>
    <div class="controls">
      <label><%= f.file_field :back_image %></label>
    <%= image_tag f.object.back_image_url if f.object.back_image.present? %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">priority</label>
    <div class="controls">
      <label>
        <%= f.radio_button :priority, 1, :checked=>  :priority ==1  %>1 
      </label>
      <label>
        <%= f.radio_button :priority, 2, :checked=>  :priority ==2  %>2 
      </label>
      <label>
        <%= f.radio_button :priority, 3, :checked=>  :priority ==3  %>3 
      </label>
      <label>
        <%= f.radio_button :priority, 4, :checked=>  :priority ==4  %>4 
      </label>
      <label>
        <%= f.radio_button :priority, 5, :checked=>  :priority ==5  %>5 
      </label>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">coupon_id</label>
    <div class="controls">
      <label><%= f.text_field :coupon_id %></label>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
