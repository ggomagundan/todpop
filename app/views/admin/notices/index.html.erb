
<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for notice in @notices %>
    <tr>
      <td><%= notice.title %></td>
      <td><%= notice.content %></td>
      <td><%= link_to "Show", [:admin, notice] %></td>
      <td><%= link_to "Edit", edit_admin_notice_path(notice) %></td>
      <td><%= link_to "Destroy", [:admin, notice], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Admin/Notice", new_admin_notice_path %></p>
